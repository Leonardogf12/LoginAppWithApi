<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LoginApp.MVVM.Views.ProfilePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Perfil"
    BackgroundColor="WhiteSmoke">
    <VerticalStackLayout
        Margin="20"
        HorizontalOptions="Center"
        Spacing="5"
        VerticalOptions="Start">

        <Frame
            BackgroundColor="White"
            BorderColor="White"
            CornerRadius="120"
            HasShadow="True">
            <Image HeightRequest="50" Source="dotnet_bot" />
        </Frame>

        <Label
            x:Name="username"
            FontAttributes="Bold"
            FontSize="Medium"
            HorizontalOptions="Center"
            TextColor="Black"
            VerticalOptions="Center" />
        <Label
            x:Name="email"
            FontSize="Small"
            HorizontalOptions="Center"
            TextColor="Gray"
            VerticalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>